#!/bin/bash

ln -f -s ~/dots/gitconfig ~/.gitconfig
ln -f -s ~/dots/githelpers ~/.githelpers

ln -f -s ~/dots/tmux.conf ~/.tmux.conf

ln -f -s ~/dots/vimrc ~/.vimrc

ln -f -s ~/dots/zshrc ~/.zshrc
ln -f -s ~/dots/zshrc ~/.zshrc

ln -f -s ~/dots/fzf.zsh ~/.fzf.zsh

mkdir -p ~/.config/nvim 
ln -f -s ~/dots/config/nvim/init.vim  ~/.config/nvim/init.vim
ln -f -s ~/dots/config/nvim/lua  ~/.config/nvim/lua
ln -f -s ~/dots/config/nvim/fzf.vim  ~/.config/nvim/fzf.vim
ln -f -s ~/dots/config/nvim/coc-settings.json ~/.config/nvim/coc-settings.json

mkdir -p ~/.config/zellij
ln -f -s ~/dots/config/zellij/config.yaml ~/.config/zellij/config.yaml

ln -f -s ~/dots/p10k.zsh ~/.p10k.zsh

if [[ "$OSTYPE" == "darwin"* ]]; then
	mkdir -p ~/Library/Application\ Support/lazygit
	ln -f -s ~/dots/config/lazygit/config.yml ~/Library/Application\ Support/lazygit/config.yml
else
	mkdir -p ~/.config/lazygit/
	ln -f -s ~/dots/config/lazygit/config.yml ~/.config/lazygit/config.yml
fi
