#!/usr/bin/env bash
# vim:set filetype=bash :

ln -f -s $PWD/gitconfig ~/.gitconfig
ln -f -s $PWD/githelpers ~/.githelpers

ln -f -s $PWD/tmux.conf ~/.tmux.conf

ln -f -s $PWD/vimrc ~/.vimrc

ln -f -s $PWD/zshrc ~/.zshrc
ln -f -s $PWD/zshrc ~/.zshrc

ln -f -s $PWD/fzf.zsh ~/.fzf.zsh

mkdir -p ~/.config/nvim 
ln -f -s $PWD/config/nvim/lua ~/.config/nvim/
ln -f -s $PWD/config/nvim/after ~/.config/nvim/
ln -f -s $PWD/config/nvim/ftplugin ~/.config/nvim/
ln -f -s $PWD/config/nvim/init.lua ~/.config/nvim/init.lua

mkdir -p ~/.config/zellij
ln -f -s $PWD/config/zellij/config.yaml ~/.config/zellij/config.yaml

ln -f -s $PWD/p10k.zsh ~/.p10k.zsh

if [[ "$OSTYPE" == "darwin"* ]]; then
	mkdir -p ~/Library/Application\ Support/lazygit
	ln -f -s $PWD/config/lazygit/config.yml ~/Library/Application\ Support/lazygit/config.yml
else
	mkdir -p ~/.config/lazygit/
	ln -f -s $PWD/config/lazygit/config.yml ~/.config/lazygit/config.yml
fi

mkdir -p ~/.config/bat 
ln -f -s $PWD/config/bat/config ~/.config/bat/config

ln -f -s $PWD/config/lsd ~/.config/

mkdir -p ~/.config/helix
ln -f -s $PWD/config/helix/config.toml ~/.config/helix/config.toml

ln -f -s $PWD/ideavimrc ~/.ideavimrc

ln -f -s $PWD/bin ~

mkdir -p ~/.claude
ln -f -s $PWD/claude/CLAUDE.md ~/.claude/CLAUDE.md
ln -f -s $PWD/claude/commands ~/.claude/
ln -f -s $PWD/claude/scripts ~/.claude/
ln -f -s $PWD/claude/agents ~/.claude/
ln -f -s $PWD/claude/output-styles ~/.claude/
ln -f -s $PWD/claude/status-lines ~/.claude/
ln -f -s $PWD/claude/hooks ~/.claude/
ln -f -s $PWD/claude/settings.json ~/.claude/settings.json

ln -f -s $PWD/claude/CLAUDE.md ~/.claude/AGENTS.md

ln -f -s $PWD/config/wezterm ~/.config/

ln -f -s $PWD/config/mise ~/.config/

mkdir -p ~/.codex
ln -f -s $PWD/codex/scripts ~/.codex/
ln -f -s $PWD/codex/prompts ~/.codex/
ln -f -s $PWD/codex/AGENTS.md ~/.codex/AGENTS.md

ln -f -s $PWD/config/ghostty ~/.config
mkdir -p ~/.config/kitty
ln -f -s $PWD/config/kitty/kitty.conf ~/.config/kitty/kitty.conf
ln -f -s $PWD/config/kitty/current-theme.conf ~/.config/kitty/current-theme.conf
