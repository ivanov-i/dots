Plug 'tpope/vim-commentary'

set nocompatible

imap jj <Esc>

filetype off   " required

" Better display for messages
set cmdheight=2
" Smaller updatetime for CursorHold & CursorHoldI
set updatetime=300
" don't give |ins-completion-menu| messages.
set shortmess+=c
" always show signcolumns
set signcolumn=yes

set history=10000
set number
set ignorecase
set smartcase
set tabstop=4
set expandtab
set shiftwidth=4
set softtabstop=4
set autoindent
set smartindent
set cindent
set laststatus=2
set showmatch
set incsearch
set hlsearch
set cmdheight=1
set showtabline=2
set winwidth=79
set scrolloff=3
set nobackup
set nowritebackup
set backspace=indent,eol,start
set showcmd
syntax on
filetype plugin indent on
set nojoinspaces
set autoread
"set relativenumber number

set number
syntax enable

let mapleader=" "
nnoremap ==  <s-V>:action ReformatCode<CR>
nnoremap <leader>z :action ToggleDistractionFreeMode<CR>
nnoremap <leader>n :action MoveEditorToOppositeTabGroup<CR>

nnoremap ]b :action NextTab<CR>
nnoremap [b :action PreviousTab<CR>