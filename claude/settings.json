{
    "hooks": {
        "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "afplay /System/Library/Sounds/Submarine.aiff"
                    },
                    {
                        "type": "command",
                        "command": "jq -r '.message' | say"
                    }
                ]
            }
        ],
        "PreToolUse": [
            {
                "matcher": "Write|Edit|MultiEdit",
                "hooks": [
                    {
                        "type": "command",
                        "command": "~/bin/file-modification-analyzer.py"
                    }
                ]
            }
        ]
    }
}
